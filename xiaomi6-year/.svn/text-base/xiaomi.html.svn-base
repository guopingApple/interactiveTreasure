</div>

<div class="salBox box1" id="J_Box1">
    <!--<div class="bg2 animated fadeIn"></div>-->
    <div class="wrap">
        <p class="con-item1 animated slideInLeft"></p>
        <p class="con-item2 animated slideInLeft"></p>
        <p class="con-item3 animated slideInLeft"></p>
    </div>
    <div class="tip animated fadeIn"></div>
</div>

<div class="salBox box2" id="J_Box2">
    <!--<div class="bg2 animated fadeIn"></div>-->
    <div class="wrap">
        <p class="con-item1 animated slideInLeft"></p>
        <p class="con-item2 animated slideInLeft" id="J_Ani1"></p>
    </div>
</div>

<div class="salBox box3" id="J_Box3">
    <!--<div class="bg3 animated fadeIn"></div>-->
    <div class="wrap">
        <p class="con-item1 animated fadeIn"></p>
        <p class="con-item2"></p>
        <p class="con-item3 animated fadeIn"></p>
    </div>
</div>

<div class="salBox box4" id="J_Box4">
    <!--<div class="bg4 animated fadeIn"></div>-->
    <div class="wrap">
        <p class="con-item1"></p>
        <p class="con-item2"></p>
        <p class="con-item3"></p>
        <p class="con-item4"></p>
        <p class="con-item5"></p>
        <p class="con-item6"></p>
    </div>
</div>

<div class="salBox box5" id="J_Box5">
    <!--<div class="bg5 animated fadeIn"></div>-->
    <div class="wrap">
        <p class="con-item1 animated zoomIn"></p>
        <p class="con-item2 animated zoomIn"></p>
    </div>
</div>

<div class="salBox box6" id="J_Box6">
    <!--<div class="bg6 animated fadeIn"></div>-->
    <p class="con-item1 animated slideInLeft"></p>
    <p class="con-item3 animated slideInLeft"></p>
    <!--<p class="con-item2 animated rollIn" id="J_Ani4"></p>-->
    <p class="con-item4 animated flipInY"></p>
</div>
<div class="salBox box13" id="J_Box13">
    <!--<div class="bg2 animated fadeIn"></div>-->
    <div class="wrap">
        <p class="con-item1"></p>
        <div class="info">
            <form>
                <p><span>姓名</span><input type="text" id="J_Name" class="txt"></p>
                <p><span>电话</span><input type="text" id="J_Phone" class="phone"></p>
                <p><span>邮箱</span><input type="text" id="J_Email" class="email"></p>
            </form>
            <a href="javascript:;" class="submit-info" id="J_SubmitInfo"></a>
        </div>
    </div>
</div>
<div class="salBox box14" id="J_Box14">
    <!--<div class="bg12 animated fadeIn"></div>-->
    <div class="wrap">
        <div class="q">
            <p class="con-item1 animated fadeIn"></p>
            <p class="con-item2 animated fadeIn" id="J_Ani3">
                <span class="po1"></span>
            </p>
            <p class="con-item3 animated fadeIn"></p>
        </div>
    </div>
    <div class="share-btn fadeIn animated" id="J_ShareBtn"></div>
    <div class="again-btn animated fadeIn"></div>
    <div class="shareTip" id="J_ShareTip">
        <span></span>
    </div>
</div>

<div class="btn" id="" style="transform-origin: 50% 50% 0;"></div>
<div class="audio_btn animated rotate" id="J_AudioBtn"></div>
<script type="text/javascript" charset="utf-8" src="js/zepto_98b86a5.js"></script>
<script type="text/javascript" charset="utf-8">
(function(){
	var loadingBtn=$('#loadingBtn'),count=0,salBox=$('.salBox'),startX=0,moveX=0,len=salBox.length;
	var touchFn=function(e){
		if($(e.target).hasClass('btn1')){
			$('.loading-img2').removeClass('i').addClass('fadeOut');
			$('.loading-img3').addClass('out');
			$('#loadingBtn').removeClass('slideInUp').addClass('fadeOut');
			setTimeout(function(){
				$('#loading').hide();
				salBox.eq(0).show();
				$('#J_Btn,.btn').show();
				$('.bg_3 p').css({'display':'block','-webkit-animation-play-state':'running'})
			},1500);
		}
		if($(e.target).hasClass('tip')){
			$(e.target).hide();
		}
		if($(e.target).hasClass('btn')){
			$('.tip').hide();
			if(moveX-startX>15){
				count-=1;
			}
			if(moveX-startX<-15){
				count+=1;
			}
			count=count>len-1?len-1:count;
			count=count<0?0:count;
			if(count<len-1){$(e.target).css({'transform-origin':'50% 50% 0','transform':'rotate('+(-30*count)+'deg)'})}
			else if(count==len-1){$(e.target).hide()}
			salBox.hide().eq(count).show();
			console.log(count);
			$('.bg_3').css('transform','translateX(-'+count+'%)')
		}
		if($(e.target).hasClass('share-btn')){
			$('.shareTip').show();
		}
		if($(e.target).hasClass('shareTip')){
			$('.shareTip').hide();
		}
		if($(e.target).hasClass('again-btn')){
			location.reload();
		}
		if($(e.target).hasClass('submit-info')){
			if($('#J_Name').val()!=''&&$('#J_Phone').val()!=''&&$('#J_Email').val()!=''){
				alert('提交成功')
			}
			else{alert('请填写完整信息')}
		}
	}
	document.body.addEventListener('touchstart', function (e) {
		e = e.changedTouches[0];
		startX=e.pageX;
	},false)
	document.body.addEventListener('touchmove', function (e) {
		e = e.changedTouches[0];
		event.preventDefault();
		moveX=e.pageX;
	},false)
	document.body.addEventListener('touchend', function (e) {
		e = e.changedTouches[0];
		touchFn(e);
	},false)
}())
</script>


</body>
</html>